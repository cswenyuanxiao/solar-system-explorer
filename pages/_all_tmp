    <script>
        // æ›´æ–°è¯­è¨€ä¿¡æ¯æ˜¾ç¤º
        function updateLanguageInfo() {
            if (window.languageManager) {
                const langInfo = window.languageManager.getCurrentLanguage();
                document.getElementById('currentLangCode').textContent = langInfo.code;
                document.getElementById('currentLangName').textContent = langInfo.name;
                document.getElementById('currentLangFlag').textContent = langInfo.flag;
            }
        }

        // ç›‘å¬è¯­è¨€å˜åŒ–äº‹ä»¶
        document.addEventListener('languageChanged', (event) => {
            console.log('Language changed to:', event.detail.language);
            updateLanguageInfo();
        });

        // é¡µé¢åŠ è½½å®Œæˆåæ›´æ–°è¯­è¨€ä¿¡æ¯
        document.addEventListener('DOMContentLoaded', () => {
            setTimeout(updateLanguageInfo, 1000); // ç­‰å¾…è¯­è¨€ç®¡ç†å™¨åˆå§‹åŒ–
        });
    </script>

