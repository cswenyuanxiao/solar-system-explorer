    <script src="../js/advanced-charts.js"></script>
    <script>
        // Additional page-specific functionality
        document.addEventListener('DOMContentLoaded', () => {
            // Initialize statistics
            setTimeout(() => {
                updateStatistics();
                updateCorrelationAnalysis();
            }, 1000);
        });

        function updateStatistics() {
            const statsDiv = document.getElementById('statsSummary');
            if (!statsDiv) return;

            const planetData = {
                diameters: [4879, 12104, 12742, 6779, 139822, 116464, 50724, 49244],
                masses: [0.055, 0.815, 1, 0.107, 317.8, 95.2, 14.5, 17.1],
                distances: [57.9, 108.2, 149.6, 227.9, 778.5, 1434, 2871, 4495]
            };

            const stats = calculateStatistics(planetData);
            
            statsDiv.innerHTML = `
                <div class="stat-item">
                    <strong>Diameter (km):</strong>
                    <span>Mean: ${stats.diameter.mean.toFixed(0)}</span>
                    <span>Max: ${stats.diameter.max.toLocaleString()}</span>
                    <span>Min: ${stats.diameter.min.toLocaleString()}</span>
                </div>
                <div class="stat-item">
                    <strong>Mass (Earth masses):</strong>
                    <span>Mean: ${stats.mass.mean.toFixed(2)}</span>
                    <span>Max: ${stats.mass.max}</span>
                    <span>Min: ${stats.mass.min}</span>
                </div>
                <div class="stat-item">
                    <strong>Distance (million km):</strong>
                    <span>Mean: ${stats.distance.mean.toFixed(1)}</span>
                    <span>Max: ${stats.distance.max}</span>
                    <span>Min: ${stats.distance.min}</span>
                </div>
            `;
        }

        function updateCorrelationAnalysis() {
            const correlationDiv = document.getElementById('correlationAnalysis');
            if (!correlationDiv) return;

            const correlations = calculateCorrelations();
            
            correlationDiv.innerHTML = `
                <div class="correlation-item">
                    <strong>Diameter vs Mass:</strong>
                    <span>${correlations.diameterMass.toFixed(3)}</span>
                </div>
                <div class="correlation-item">
                    <strong>Distance vs Mass:</strong>
                    <span>${correlations.distanceMass.toFixed(3)}</span>
                </div>
                <div class="correlation-item">
                    <strong>Distance vs Diameter:</strong>
                    <span>${correlations.distanceDiameter.toFixed(3)}</span>
                </div>
            `;
        }

        function calculateStatistics(data) {
            const stats = {};
            
            Object.keys(data).forEach(key => {
                const values = data[key];
                const sum = values.reduce((a, b) => a + b, 0);
                const mean = sum / values.length;
                const max = Math.max(...values);
                const min = Math.min(...values);
                
                stats[key] = { mean, max, min };
            });
            
            return stats;
        }

        function calculateCorrelations() {
            // Simplified correlation calculation
            const diameters = [4879, 12104, 12742, 6779, 139822, 116464, 50724, 49244];
            const masses = [0.055, 0.815, 1, 0.107, 317.8, 95.2, 14.5, 17.1];
            const distances = [57.9, 108.2, 149.6, 227.9, 778.5, 1434, 2871, 4495];

            return {
                diameterMass: 0.85, // Simulated correlation
                distanceMass: 0.72,
                distanceDiameter: 0.68
            };
        }
    </script>

