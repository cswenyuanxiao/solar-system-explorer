    <script>
        // å¯¼èˆªé‡ç½®è„šæœ¬ - è§£å†³è·¯ç”±é—®é¢˜
        (function() {
            console.log('ğŸ”§ 3Dæ¨¡æ‹Ÿå™¨å¯¼èˆªé‡ç½®è„šæœ¬å¯åŠ¨...');
            
            // é¡µé¢åŠ è½½å®Œæˆåé‡ç½®å¯¼èˆª
            function resetNavigation() {
                console.log('ğŸ”„ é‡ç½®å¯¼èˆªçŠ¶æ€...');
                
                // ç¡®ä¿æ‰€æœ‰é“¾æ¥æ­£å¸¸å·¥ä½œ
                document.addEventListener('click', function(e) {
                    if (e.target.tagName === 'A' && e.target.href) {
                        const href = e.target.href;
                        
                        // æ£€æŸ¥æ˜¯å¦æ˜¯å†…éƒ¨é“¾æ¥ä¸”ä¸æ˜¯3Dæ¨¡æ‹Ÿå™¨é¡µé¢
                        if (href.includes(window.location.origin) && !href.includes('3d-simulator')) {
                            console.log('ğŸ”— å¯¼èˆªåˆ°:', href);
                            
                            // ä½¿ç”¨window.locationè¿›è¡Œå¯¼èˆªï¼Œç¡®ä¿é¡µé¢å®Œå…¨é‡æ–°åŠ è½½
                            window.location.href = href;
                            e.preventDefault();
                        }
                    }
                }, true);
                
                // ä¿®å¤å†å²è®°å½•
                if (window.history && window.history.replaceState) {
                    const currentPath = window.location.pathname;
                    window.history.replaceState(null, null, currentPath);
                }
            }
            
            // é¡µé¢å¸è½½æ—¶æ¸…ç†
            window.addEventListener('beforeunload', function() {
                console.log('ğŸ“¤ é¡µé¢å¸è½½ï¼Œæ¸…ç†å¯¼èˆªçŠ¶æ€...');
                resetNavigation();
            });
            
            // é¡µé¢éšè—æ—¶é‡ç½®
            window.addEventListener('pagehide', function() {
                console.log('ğŸ‘ï¸ é¡µé¢éšè—ï¼Œé‡ç½®è·¯ç”±çŠ¶æ€...');
                if (window.history) {
                    window.history.scrollRestoration = 'auto';
                }
            });
            
            // ç«‹å³æ‰§è¡Œä¸€æ¬¡é‡ç½®
            resetNavigation();
            
            // é¡µé¢åŠ è½½å®Œæˆåå†æ¬¡é‡ç½®
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', resetNavigation);
            } else {
                resetNavigation();
            }
            
            console.log('âœ… 3Dæ¨¡æ‹Ÿå™¨å¯¼èˆªé‡ç½®å®Œæˆ');
        })();
    </script>

